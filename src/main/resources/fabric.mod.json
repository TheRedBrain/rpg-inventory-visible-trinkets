{
  "schemaVersion": 1,
  "id": "visibletrinkets",
  "version": "${version}",
  "name": "RPG Inventory - Visible Trinkets",
  "description": "An addon for RPG Inventory which provides an API for equipped trinkets to be visible on the player model.",
  "authors": [
    "TheRedBrain"
  ],
  "contact": {
    "sources": "https://github.com/TheRedBrain/rpg-inventory-visible-trinkets"
  },
  "license": "MIT",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.theredbrain.visibletrinkets.VisibleTrinkets"
    ],
    "client": [
      "com.github.theredbrain.visibletrinkets.VisibleTrinketsClient"
    ]
  },
  "mixins": [
    "visibletrinkets.mixins.json"
  ],
  "depends": {
    "java": ">=17",
    "minecraft": "1.20.1",
    "fabricloader": ">=0.14.20",
    "fabric-api": "*",
    "azurelib": ">=1.0.3",
    "rpginventory": ">=1.3.0"
  }
}
